{
  "env": {
    "browser": true,
    "es6": true
  },
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "angular",
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2016
  },
  "rules": {
    "angular/di": 0, // ng-annotate takes care of that
    "angular/module-setter": 0,
    "angular/service-name": 0,
    "angular/log": 0,
    "angular/timeout-service": 0,
    "angular/document-service": 0,
    "angular/window-service": 0,
    "array-bracket-newline": [
      2,
      "consistent"
    ],
    "arrow-parens": 2,
    "arrow-spacing": 2,
    "camelcase": [
      2,
      {
        "properties": "never"
      }
    ],
    "curly": [
      2,
      "all"
    ],
    "eol-last": 2,
    "eqeqeq": 2,
    "indent": [
      2,
      4,
      {
        "SwitchCase": 1
      }
    ],
    "keyword-spacing": [
      2,
      {}
    ],
    "max-len": [
      2,
      120
    ],
    "max-statements-per-line": 2,
    "no-alert": 1,
    "no-confusing-arrow": 2,
    "no-console": "warn",
    "no-mixed-spaces-and-tabs": 2,
    "no-multi-str": 2,
    "no-multiple-empty-lines": 2,
    "no-trailing-spaces": 2,
    "no-unneeded-ternary": 2,
    "no-useless-computed-key": 2,
    "no-useless-constructor": 2,
    "no-var": 2,
    "no-whitespace-before-property": 2,
    "operator-linebreak": [
      2,
      "before"
    ],
    "prefer-const": 2,
    "quotes": [
      2,
      "single"
    ],
    "space-before-blocks": [
      2,
      "always"
    ],
    "space-before-function-paren": [
      2,
      "never"
    ],
    "space-in-parens": [
      2,
      "never"
    ],
    "space-infix-ops": 2,
    "space-unary-ops": [
      2,
      {
        "nonwords": false,
        "overrides": {}
      }
    ],
    "spaced-comment": [
      2,
      "always",
      {
        "line": {
          "exceptions": [
            "////"
          ]
        }
      }
    ],
    "template-curly-spacing": 2,
    "wrap-iife": 2
  }
}
